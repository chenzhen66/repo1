<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <welcome-file-list>
        <welcome-file>web/menu.jsp</welcome-file>
    </welcome-file-list>

    <filter-mapping>
        <filter-name>LoginFilter</filter-name>
        <url-pattern>/web/view/*</url-pattern>
        <url-pattern>/WebDeskServlet</url-pattern>
        <url-pattern>/ViewFoodServlet</url-pattern>
        <url-pattern>/CartServlet</url-pattern>
        <url-pattern>/OrderServlet</url-pattern>
        <url-pattern>/ViewMyMSGServlet</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>DeskFilter</filter-name>
        <url-pattern>/ViewFoodServlet</url-pattern>
    </filter-mapping>

</web-app>
